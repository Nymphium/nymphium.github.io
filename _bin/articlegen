#!/bin/bash

set -e

year=$(date +%Y)
month=$(date +%m)
date=$(date +%d)
timestamp=${year}-${month}-${date}
postdir="_posts"

while getopts ":d::D:h" OPT; do
  case "${OPT}" in
    h)
      cat <<EOL
articlegen [ -D /* means draft */ ][ -d YYYY-MM-DD /* contorl publish date */ ] title
EOL
      exit 1
      ;;
    D) # as draft
      postdir="_drafts"
      ;;
    d)
      sdate=${OPTARG/Y/${year}}
      sdate=${sdate/M/${month}}

      if [[ ! "${sdate}" =~ \d{4}-\d{2}-\d{2} ]]; then
        timestamp=$sdate
        arr=($(echo ${timestamp//-/ }))
        year=${arr[0]}
        month=${arr[1]}
        date=${arr[2]}
      else
        echo "invalid date expression: '${OPTARG}'"
        exit 1
      fi
      ;;
  esac
done

shift $(($OPTIND - 1))

filename=${1}
articlename=${2:-${1}}
postfilename="${timestamp}-${filename}"

picdir="pictures"
srcdir="src"

[ ! "${1}" ] && filename="temp"


mkdir -p \
  "${postdir}" \
  "${picdir}/${year}/${month}/${date}/${filename}" \
  "${srcdir}/${year}/${month}/${date}/${filename}"

cat <<EOL > "${postdir}/${postfilename}.md"
---
layout: post
title: ${articlename}
tags: []
---
EOL

